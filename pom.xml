<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>sup-epics</artifactId>
    <packaging>codac</packaging>
    <version>0.1.0</version>
    <name>Supervision and automation system EPICS interface</name>
    <description>Library of SUP components for EPICS network protocol</description>
    <url>http://www.iter.org/</url>

    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
        <integrity.level>1</integrity.level>
        <cppcheck.args>--enable=all --suppress=missingInclude --inline-suppr</cppcheck.args>
	<sonar.exclusions>src/test/**</sonar.exclusions>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>7.1.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>vanherw</id>
            <name>Walter Van Herck</name>
            <organization>ITER Organisation</organization>
            <email>walter.vanherck@iter.org</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
      <developer>
            <id>pospelg</id>
            <name>Gennady Pospelov</name>
            <organization>ITER Organisation</organization>
            <email>gennady.pospelov@iter.org</email>
            <roles>
                <role>unit owner</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <init>
                        <expand source="-" file="main/VERSION">
                            <![CDATA[${project.version}]]>
                        </expand>
                    </init>
                    <packaging>
                        <package>
                            <!-- Libraries -->
                            <include type="file" source="lib64" target="lib">
                                <include>*.so.*</include>
                            </include>
                            <!-- Package dependencies -->
                            <requires version="current" buildOnly="true">cmake</requires>
                            <requires codac="true">sup-dto</requires>
                            <requires codac="true">epics</requires>
                        </package>
                        <package name="devel">
                            <!-- Libraries -->
                            <include type="file" source="lib64" target="lib">
                                <include>*.a</include>
                                <include>*.so</include>
                            </include>
                            <!-- Public API headers -->
                            <include type="file" source="include/sup/epics" target="include/sup/epics">
                                <include>*.h</include>
                            </include>
                            <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}</requires>
                            <requires codac="true" buildOnly="true">sup-dto-devel</requires>
                            <requires codac="true" buildOnly="true">epics-devel</requires>
                        </package>
                        <package name="tests">
                            <!-- Unit Test -->
                            <include type="file" source="bin/testsup-epics" target="tests/${project.artifactId}/testsup-epics"/>
                            <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}-devel</requires>
                            <requires version="current" buildOnly="true">gtest-devel</requires>
                            <requires version="current" buildOnly="true">gmock-devel</requires>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
